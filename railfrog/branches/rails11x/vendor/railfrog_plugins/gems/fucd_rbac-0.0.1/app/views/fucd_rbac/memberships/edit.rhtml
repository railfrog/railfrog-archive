<h2>Edit Memberships</h2>

<% form_for :memberships, nil,
            :url => { :action => :update },
            :html => { :method => :put } do |f| %>
<% if params[:user_id] %>
<%= render :partial => 'role', :collection => @roles, :locals => { :f => f, :user => @user } %>
<% elsif params[:role_id] %>
<%= render :partial => 'user', :collection => @users, :locals => { :f => f, :role => @role } %>
<% end %>
<%= submit_tag 'Save' %>
<% end %>