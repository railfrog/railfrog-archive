<h2>Login</h2>

<%= link_to 'logout', fucd_rbac_login_url, :method => :delete %>

<% form_for :login, @login,
            :url => { :action => :create } do |f| %>
<dl>
  <dt><label for="login_username">Username</label></dt>
  <dd><%= f.text_field :username, :value => (params[:login] ? params[:login][:username] : '') %></dd>

  <dt><label for="login_password">Password</label></dt>
  <dd><%= f.password_field :password, :value => '' %></dd>
</dl>
<%= submit_tag 'Login' %>
<% end %>