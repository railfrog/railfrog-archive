<!-- FIXME: drop table from the layout - use just CSS -->
<table width="100%">

  <!-- header -->
  <tr>
    <td colspan="2">
    <div id="main-menu">
      <h1>Railfrog Control Panel</h1>
    </div>
    </td>
  </tr>

  <!-- content -->
  <tr>
    <td width="30%" align="left" valign="top">
    <div id="leftbar">
      <h2>Explore</h2>
      <%= create_mapping_tree(@site_mappings) %>
    </div>
    </td>
    <td width="70%" align="left" valign="top">
      <div id="rightbar">
        <div id="summary">
          <%= render :partial => "folder_summary",
              :locals => { :file_name => '/' } %>
        </div>
        <div id="chunk_version_summary" style="display:none"></div>
        <div id="context_menu">
          <%= render :partial => "folder_actions",
              :locals => { :site_mapping => SiteMapping.find_root } %>
        </div>
        <div id="content" style="display:none"></div>
      </div>
    </td>
  </tr>

  <!-- footer -->
  <tr>
    <td colspan="2">
      <div id="footer"></div>
    </td>
  </tr>

</table>

