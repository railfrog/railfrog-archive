<%= block_start 'edit-chunk', 'Edit Document' %>
  <%= block_content_start 'edit-chunk' %>

    <%= form_remote_tag :url => { :action => 'update_chunk' } %>
      <%= hidden_field 'site_mapping', 'id' %>
      <%= hidden_field 'old_chunk_version', 'id' %>
      <%= render :partial => 'chunk_form' %>
      <p><label for="put_live">Put Live</label><%= check_box('put', 'live') %>
      <%= submit_tag 'Save' %>
    <%= end_form_tag %>

  <%= block_content_end %>
<%= block_end %>