<h2>Role <%= @role.name %></h2>

<ul>
  <li><%= button_to 'Delete', fucd_rbac_role_url(@role), :method => :delete %></li>
  <li><%= link_to 'Edit Permissions', fucd_rbac_permissions_url(:role_id => @role) %></li>
  <li><%= link_to 'Back to List', fucd_rbac_roles_url %></li>
</ul>

<h3>Role Data</h3>
<%= link_to 'Edit', fucd_rbac_edit_role_url(@role) %>
<dl>
  <dt>Name</dt>
  <dd><%= @role.name %></dd>
  
  <dt>Description</dt>
  <dd><%= @role.description %></dd>
</dl>

<h3>Assigned Users</h3>
<%= link_to 'Edit', fucd_rbac_role_memberships_url(:role_id => @role) %>
<ul>
<% @role.users.each do |user| %>
  <li><%= user.username %></li>
<% end %>
</ul>