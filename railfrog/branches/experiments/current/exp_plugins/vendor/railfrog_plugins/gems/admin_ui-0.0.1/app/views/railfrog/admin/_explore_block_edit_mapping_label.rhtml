<%= block_start 'edit-label', 'Edit Label' %>
  <%= block_content_start 'edit-label' %>

    <% form_remote_for :mapping_label, @mapping_label,
                       :url => { :action => 'update_mapping_label' } do |f| %>
      <%= f.hidden_field :id %>
      <%= f.hidden_field :site_mapping_id %>
      <%= render :partial => 'mapping_label_form' %>
      <%= submit_tag 'Save' %>
    <% end %>

  <%= block_content_end %>
<%= block_end %>