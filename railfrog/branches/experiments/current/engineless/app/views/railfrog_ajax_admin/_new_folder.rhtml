<h2>Add new folder</h2>

<%
form_remote_for :site_mapping, @site_mapping,
  :url => { :action => 'new_folder' } do |f|
%>
  <%= hidden_field_tag :parent_id, @parent_id %>
  <%= render :partial => 'folder_form' %>
  <%= submit_tag('Save', { :onclick => "Dialog.closeInfo();return true;" } ) %>
  <%= submit_tag('Cancel', { :onclick => "Dialog.closeInfo();return false;" } ) %>
<% end %>


