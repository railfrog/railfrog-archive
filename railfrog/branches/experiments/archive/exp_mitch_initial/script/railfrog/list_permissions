#!/usr/bin/env ruby

print 'Loading railfrog system...'
require 'config/environment'
puts 'Done'

print "\n"
puts '=== Listing All Permissions ==='
puts 'Name'.ljust(30) + 'Internal Name'

perms = Permission.find(:all)
if perms.empty?
  print "\n"
  puts 'No permissions. That can\'t be good.'
  exit
end

perms.each do |perm|
  puts perm.translate.ljust(30) + perm.name
end