<h1>Search</h1>
<%= form_remote_tag :url => { :action => 'search'} %>
  <%= text_field_tag 'name' %>
  <%= submit_tag 'Search' %>
<%= end_form_tag %>

<div id="search_results"></div>

<h1>Summary</h1>
<p>There are <%=@plugins.size.to_s%> plugins installed:</p>
<p>
<% @plugins[0..-2].each do |plugin| 
     spec = plugin -%>
<a href="#<%=spec.name%>"><%=spec.name%></a>,
<% end -%>
<a href="#<%=@plugins[-1].spec.name%>"><%=@plugins[-1].spec.name%></a>.

<h1>Plugins</h1>

<dl>
<% @plugins.each do |plugin| 
     spec = plugin.spec -%>
<dt>
  <a name="<%=spec.name%>"></a>
<b><%=spec.name%> <%=spec.version%></b>
<%   if plugin.enabled? -%>
<%= link_to '[Disable]', :action => 'disable', :name => spec.name, :version => spec.version %>
<%   else -%>
<%= link_to '[Enable]', :action => 'enable', :name => spec.name, :version => spec.version %>
<%   end %>
<%= link_to '[Uninstall]', :action => 'uninstall', :name => spec.name, :version => spec.version %>
<%   if spec.homepage -%>
<a href="<%=spec.homepage%>" target="_blank" title="<%=spec.homepage%>">[www]</a>
<%   end
     if spec.dependencies.size > 0 -%>
 - depends on 
<%     spec.dependencies[0..-2].each do |dependency| -%>
<a href="#<%=dependency.name%>" title="<%=dependency.version%>"><%=dependency.name%></a>,
<%     end -%>
<a href="#<%=spec.dependencies[-1].name%>" title="<%=spec.dependencies[-1].version%>"><%=spec.dependencies[-1].name%></a>.
<%     end -%>
</dt>
<dd>
<%=spec.summary%>
<br />
<br />
</dd>
<% end -%>
</dl>