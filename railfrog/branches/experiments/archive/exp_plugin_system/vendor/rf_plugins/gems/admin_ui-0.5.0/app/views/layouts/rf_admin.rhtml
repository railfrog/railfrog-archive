<html>
<head>
<title>RailFrog Administration</title>
<%= javascript_include_tag :defaults %>
<%= stylesheet_link_tag 'railfrog' %>
</head>

<body>
<div id="container">
<div id="nav">
  <h1>RailFrog Administration</h1>
  <ul id="nav-main">
    <li><%=nav_tab("content","Content") %></li>
    <li><%=nav_tab("users","Users") %></li>
    <li><%=nav_tab("plugins","Plugins") %></li>
    <li style="float: right"><a href="/railfrog/users/logout">Logout</a></li>
  </ul>
</div>
<div id="content">
<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:error] %></p>

<%= @content_for_layout %>
</div>
</div>
</body>
</html>
</head>