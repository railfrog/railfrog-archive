<tr>
  <td class="label-name"><%= mapping_label.name %></td>
  <td class="label-separator">=</td>
  <td class="label-value"><%= mapping_label.value %></td>

  <td class="tag-action">
    <%= link_to_remote('edit',
                       :update => 'content-main',
                       :url => { :action => 'create_or_edit_mapping_label',
                                 :mapping_label_id => mapping_label.id }) %>    
  </td>
  <td class="tag-action">
    <%= link_to_remote('delete',
                       :url => { :action => 'delete_mapping_label', :mapping_label_id => mapping_label.id },
                       :confirm => "Are you sure you want to delete the label '#{mapping_label.name}'?") %>
  </td>
</tr>