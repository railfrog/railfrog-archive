<h2>User <%= @user.full_name %></h2>

<ul>
  <li><%= button_to 'Delete', fucd_rbac_user_url(@user), :method => :delete %></li>
  <li><%= link_to 'Back to List', fucd_rbac_users_url %></li>
</ul>

<h3>User Data</h3>
<%= link_to 'Edit', fucd_rbac_edit_user_url(@user) %>
<dl>
  <dt>Username</dt>
  <dd><%= @user.username %></dd>
  
  <dt>Email</dt>
  <dd><%= @user.email %></dd>
  
  <dt>First Name</dt>
  <dd><%= @user.first_name %></dd>
  
  <dt>Last Name</dt>
  <dd><%= @user.last_name %></dd>
</dl>

<h3>Assigned Roles</h3>
<%= link_to 'Edit', fucd_rbac_user_memberships_url(:user_id => @user) %>
<ul>
<% @user.roles.each do |role| %>
  <li><%= role.name %></li>
<% end %>
</ul>