<%= block_start 'html', 'Documents' %>
  <%= block_nav_start 'html' %>
    <li>
      <%= link_to_remote '[new html]',
                         :update => 'content-main',
                         :url => { :action => 'new_chunk', :parent_id => site_mapping.id } %>
    </li>
    <li>
      <%= link_to_remote '[new markdown]',
                         :update => 'content-main',
                         :url => { :action => 'new_chunk', :parent_id => site_mapping.id, :syntax => :markdown } %>
    </li>
    <li>
      <%= link_to_remote '[new textile]',
                         :update => 'content-main',
                         :url => { :action => 'new_chunk', :parent_id => site_mapping.id, :syntax => :textile } %>
    </li>
  <%= block_nav_end %>

  <%= block_content_start 'html' %>
    <%= list_files(site_mapping, 'document') %>
  <%= block_content_end %>
<%= block_end %>